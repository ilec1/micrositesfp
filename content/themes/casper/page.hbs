<style>
    .post-full {
        margin-left: 25%;
        width: 70%;
    }
    .post-content p{
        text-align: justify;
    }
    .post-full-content h2:not(:first-child){
        padding-top: 140px;
    }
    .menu-lateral {
        width: 20%;
        position: fixed;
        float:left;
        z-index: 100000;
        -webkit-transition: ease 1s;
        transition: ease 1s;
        display: block;
    }

    .menu-lateral a:active {
        font-weight: bold;
    }

    .menu-lateral.not-sticky {
        position: relative;
    }

    .post-full-image {
        margin: 10px 0;
        border-radius: 0;
    }
body{
    position: relative;
}
    .post-full-image img {
        height: 200px;
    }

    .menu-lateral a{
        display: block;
        font-weight: bold;
        margin: 15px 0;
    }
    .menu-lateral a.current{
        border-left: solid #9d2449 5px;
        padding-left: 10px;
    }
</style>
{{> "site-nav"}}
{{!-- Everything inside the #post tags pulls data from the post --}}
PAGE
{{#post}}

<main id="site-main" class="site-main">
    <div class="inner">
        <aside class="menu-lateral" id="menu-lateral">
        {{!-- {{#get "pages" filter="page:true+tags:{{primary_tag.slug}}" order="id asc"}}
            {{#foreach pages}}
            <a href="{{url}}">{{title}}</a>
            {{/foreach}}
        {{/get}} --}}
        {{!-- {{#has slug="sfp"}}
        <a href="{{@site.url}}/directorio">Directorio</a>
        {{/has}} --}}
        </aside>
        <article class="post-full {{post_class}} {{#unless feature_image}}no-image{{/unless}}">
            {{#if feature_image}}
            <figure class="post-full-image">
                {{!-- This is a responsive image, it loads different sizes depending on device
                https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
                <img srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w" sizes="(max-width: 800px) 400px,
                            (max-width: 1170px) 700px,
                            1400px" src="{{img_url feature_image size="xl"}}" alt="{{title}}" />
            </figure>
            {{/if}}
            <header class="post-full-header">
                <h1 class="post-full-title text-left">{{title}}</h1>
            </header>

            <section class="post-full-content">
                <div class="post-content">
                    {{content}}
                </div>
            </section>

        </article>


    </div>
</main>

{{/post}}
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
{{!-- The #contentFor helper here will send everything inside it up to the matching #block helper found in default.hbs --}}
{{#contentFor "scripts"}}
<script>
    $(document).ready(function () {
        var $postContent = $(".post-full-content");
        $postContent.fitVids();
        $postContent.find("h2").each(function (index, el) {
            $("<a href='#" + el.id + "'>" + el.innerHTML + "</a>").appendTo(".menu-lateral");
        });   
        /*$(".menu-lateral a").click(function(){
            var id=$(this).attr('href');
            $('html,body').animate({scrollTop: $("h2"+id).offset().top},'slow');    
        });*/
        var footer = $("footer").offset().top;
        $(window).scroll(function (event) {
            if ($(window).scrollTop() >= footer-500)
                $(".menu-lateral").hide('slow');
            else
                $(".menu-lateral").show('slow');
        });
        $('body').scrollspy({ target: '#menu-lateral' })
    });
</script>
{{/contentFor}}