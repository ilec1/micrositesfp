<style>
    .post-card{
        border-radius: 16px;
    }
    .post-card-large .post-card-content{
        flex: inherit;
    }
    .post-card-content .post-card-content-link{
        display: flex;
    flex-direction: column;
    justify-content: flex-end;
    }
    .post-card-content p{
        color: #fff;
    }
    .post-card-title{
        color: #cf913e;
    }
    
</style>
<article
    class="post-card {{post_class}}{{#unless feature_image}} no-image{{else}}{{/unless}}{{#if @first}} post-card-large{{/if}}"{{#if feature_image}}
    style="background:linear-gradient(to top,rgba(0,0,0,0.7) 0%, rgba(0,0,0,0) 100%), url('{{img_url feature_image}}') #cf913e 50% 50% no-repeat;background-size: cover"    
    {{/if}}>
    

    <div class="post-card-content">
        <a class="post-card-content-link" href="{{url}}">

            <header class="post-card-header">
                {{#if primary_tag}}
                <span class="post-card-tags">{{primary_tag.name}}</span>
                {{/if}}
                <h2 class="post-card-title">{{title}}</h2>
            </header>

            <section class="post-card-excerpt">
                <p>{{excerpt words="33"}}</p>
            </section>

        </a>

        <footer class="post-card-meta">

            <ul class="author-list">
                {{#foreach authors}}
                <li class="author-list-item">

                    <div class="author-name-tooltip">
                        {{name}}
                    </div>

                    {{#if profile_image}}
                    <a href="{{url}}" class="static-avatar">
                        <img class="author-profile-image" src="{{img_url profile_image size="xs"}}" alt="{{name}}" />
                    </a>
                    {{else}}
                    <a href="{{url}}" class="static-avatar author-profile-image">{{> "icons/avatar"}}</a>
                    {{/if}}
                </li>
                {{/foreach}}
            </ul>

        </footer>

    </div>{{!--/.post-card-content--}}

</article>