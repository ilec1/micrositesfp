{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{> "site-nav"}}
{{!-- The main content area --}}
<main id="site-main" class="site-main outer">
    <div class="inner container">

        {{#is "index"}}
        {{> "carousel"}}
        {{> "bullets"}}
        {{/is}}

        <div class="post-feed {{#is "index"}}post-feed-index{{/is}}">

            {{!-- {{#get "posts" limit="5" filter="tags:-[bullet-home,proyectos]+featured:false" order="published_at desc"}} --}}
            {{#get "posts" limit="5" filter="tags:[noticias,comunicados]+featured:false" order="published_at desc"}}
            {{#foreach posts}}

            {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
            {{> "post-card"}}

            {{/foreach}}
            {{/get}}
        </div>



    </div>
</main>